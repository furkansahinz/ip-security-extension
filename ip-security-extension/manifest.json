{
    "manifest_version": 3,
    "name": "IP Security Check",
    "version": "1.1",
    "description": "Check the security status of IP addresses using AbuseIPDB.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "https://api.abuseipdb.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icons/icon.png"
      }
    },
    "icons": {
      "48": "icons/icon.png"
    }
  }
  